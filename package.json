    "dependencies": {
        "@zacharyeggert/reverb-api": "^0.1.1",
        "bcrypt": "^5.0.1",
        "compression": "^1.7.4",
        "concurrently": "^6.2.1",
        "connect": "^2.30.2",
        "connect-mongo": "^4.6.0",
        "cookie-parser": "^1.3.5",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
