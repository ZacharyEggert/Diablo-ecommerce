{
    "compilerOptions": {
        "target": "ES5",
        "outDir": "dist",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "noEmit": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.json",
        "src/**/*.d.ts",
        "src/**/*.css",
        "src/**/*.less",
        "src/**/*.scss",
        "src/**/*.sass",
        "src/**/*.styl",
        "src/**/*.svg",
        "src/**/*.png",
        "src/**/*.jpg",
        "src/**/*.jpeg",
        "src/**/*.gif",
        "src/**/*.bmp",
        "src/**/*.woff",
        "src/**/*.woff2",
        "src/**/*.ttf",
        "src/**/*.eot",
        "src/**/*.otf",
        "src/**/*.mp4",
        "src/**/*.webm",
        "src/**/*.mp3",
        "src/**/*.wav",
        "src/**/*.m4a",
        "src/**/*.aac"
    ],
    "exclude": ["node_modules"]

}
